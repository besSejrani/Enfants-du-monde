      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "publisherName": "Enfants du monde"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
